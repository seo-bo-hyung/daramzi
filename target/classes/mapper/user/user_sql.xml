<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">

    <select id="selectUser" resultType="UserVO">
        <![CDATA[
          SELECT
              ID,
              PASSWORD,
              NAME
          FROM
              USER
          WHERE ID = #{id}
			AND PASSWORD = #{pw}
      ]]>
    </select>

    <select id="selectByEmail" resultType="UserVO">
        <![CDATA[
          SELECT
              EMAIL,
              NAME
          FROM
              USER
          WHERE
              EMAIL = #{email}       
      ]]>
    </select>
    
    <select id="selectById" resultType="UserVO">
        <![CDATA[
        SELECT
			userIdx
			,id
			,email
			,name
			,password
			,grade
			,ins_dt
			,upt_dt
		FROM
              USER
          WHERE
              ID = #{id}
      ]]>
    </select>
    
    <insert id="register">
        <![CDATA[
            INSERT INTO USER
            (
                EMAIL,
                ID,
                NAME,
                PASSWORD,
                ins_dt
            )
            VALUES
            (
                #{email},
                #{id},
                #{name},
                #{pw},
                SYSDATE()
            )
        ]]>
    </insert>
 
 
     <insert id="mkDir">
        <![CDATA[
		    INSERT INTO file_folder (
		        folderSeq,
		        folderName,
		        id,
		        ins_dt
		    ) VALUES (
		        (SELECT ifnull(MAX(folderSeq) + 1, 1) FROM file_folder A),
		        #{id},
		        #{id}, 
		        sysdate()
	        )
        ]]>
    </insert>
</mapper>
