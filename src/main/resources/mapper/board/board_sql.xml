<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<sql id="COMMON_PAGING_HEADER">
		select R1.* FROM(	
	</sql>
	
	<sql id="COMMON_PAGING_TAIL">
		) R1
		LIMIT #{listNum, jdbcType=INTEGER} OFFSET #{start, jdbcType=INTEGER}	
	</sql>

    
    <select id="boardList" parameterType="BoardListVO" resultType="BoardVO">
      <include refid="COMMON_PAGING_HEADER"/>
      <![CDATA[
		    select seq, 
		            NAME, 
		            email, 
		            homepage, 
		            title, 
		            content, 
		            password, 
		            count, 
		            regdate, 
		            pos, 
		            depth
		    from tbl_board
		]]>    

		<![CDATA[
    		order by seq desc
		]]> 
      <include refid="COMMON_PAGING_TAIL"/>
    </select> 
</mapper>
